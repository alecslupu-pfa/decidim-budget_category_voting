<!-- insert_before 'div.budget-summary__total' -->
<div class="category-votes-summary" data-progress-reference data-safe-url="<%= budget_url(budget) %>">
  <div class="row small-up-1 medium-up-4 card-grid">
    <% budget.category_budget_rules.each do |rule| %>
      <%= cell "decidim/budget_category_voting/rule", rule %>
    <% end %>
  </div>
</div>

<% snippets.add(:foot, javascript_pack_tag("decidim_budget_category_voting", defer: false)) %>
