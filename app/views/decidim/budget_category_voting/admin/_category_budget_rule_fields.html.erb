<div class="card category-bugdet-rule" id="<%= id %>-field">
  <div class="card-divider category-bugdet-rule-divider">
    <h2 class="card-title">
      <span><%== icon("move") %></span>
      <span><%= t(".category") %></span>

      <button class="button small alert hollow move-up-question button--title">
        <%== "#{icon("arrow-top")} #{t(".up")}" %>
      </button>

      <button class="button small alert hollow move-down-question button--title">
        <%== "#{icon("arrow-bottom")} #{t(".down")}" %>
      </button>

      <button class="button small alert hollow remove-category-bugdet-rule button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <div class="grid-x">
      <div class="cell auto">
        <%= form.categories_select :decidim_category_id, form.object.categories, include_blank: true, disable_parents: false %>

        <% if current_component.settings.vote_rule_threshold_percent_enabled %>
          <%= form.number_field :vote_threshold_percent, class: "input-group-field" %>
        <% end %>

        <% if current_component.settings.vote_rule_minimum_budget_projects_enabled %>
          <%= form.number_field :vote_minimum_budget_projects_number %>
        <% end %>

        <% if current_component.settings.vote_rule_selected_projects_enabled %>
          <%= form.number_field :vote_selected_projects_minimum %>
          <%= form.number_field :vote_selected_projects_maximum %>
        <% end %>
      </div>
    </div>
    <%= form.hidden_field :id %>
    <%= form.hidden_field :position, value: form.object.position || 0 %>
    <%= form.hidden_field :deleted %>
  </div>
</div>
